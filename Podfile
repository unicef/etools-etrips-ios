platform :ios, '9.0'

target 'eTrips' do
	use_frameworks!

	# Network abstraction layer written in Swift.
	pod 'Moya', '8.0.0'
	
	# ObjectMapper bindings for Moya and RxSwift
	pod 'Moya-ObjectMapper', :git => 'https://github.com/ivanbruel/Moya-ObjectMapper'
	
	# A tool to enforce Swift style and conventions.
	pod 'SwiftLint'

	# Simple Swift wrapper for Keychain that works on iOS and OS X.
	pod 'KeychainAccess'
	
	# A lightweight, pure-Swift library for downloading and caching images from the web.
	pod 'Kingfisher', '~> 3.0'
	
	# Simple PhotoBrowser/Viewer.
	pod 'SKPhotoBrowser'
	
	# A UITextView subclass that adds support for multiline placeholder written in Swift.
	pod 'KMPlaceholderTextView', '~> 1.3.0'
	
	# MBProgressHUD + Customizations
	pod 'MBProgressHUD'
	
	# UIScrollView infinite scroll category.
	pod 'UIScrollView-InfiniteScroll', '~> 1.0.0'
	
	# SwiftPaginator is a block based Swift class.
	pod 'SwiftPaginator'
	
	pod 'AlamofireNetworkActivityLogger', '~> 2.0'
	
	# The official iOS SDK for the HockeyApp service.
	pod 'HockeySDK'
end
